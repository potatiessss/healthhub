<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" app:cardElevation="4dp" app:cardCornerRadius="8dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp">
        <!--  Profile Picture  -->
        <ImageView android:id="@+id/img_doctor_profile" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginEnd="16dp" android:src="@drawable/matthew" android:contentDescription="Doctor Profile Picture" android:scaleType="centerCrop"/>
        <!--  Appointment Details  -->
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
            <TextView android:id="@+id/tv_doctor_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dr. John Doe" android:textSize="16sp" android:textStyle="bold"/>
            <TextView android:id="@+id/tv_specialist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cardiologist" android:textSize="14sp" android:textColor="@android:color/darker_gray"/>
            <TextView android:id="@+id/tv_appointment_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Monday, 8:00 AM" android:textSize="14sp" android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>